<!DOCTYPE html>
<html>
<head>
  <title>Desafio Programação</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">

  <div class="row">
    <div class="col-md-3">
      <%= render 'dataupload', data_upload: @data_upload %>
    </div>

    <div class="col-md-7">
      <%= yield %>
    </div>

    <div class="col-md-2">
      <p>
        <label class="alert alert-info"><%= label_tag t("sum") %> <%= label_tag t("unit") %> <%= sum(@sales) %></label>
      </p>
    </div>
  </div>

</div>

</body>
</html>
